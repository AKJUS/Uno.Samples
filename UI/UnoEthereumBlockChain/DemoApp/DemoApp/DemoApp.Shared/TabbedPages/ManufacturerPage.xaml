                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="AntiqueWhite">
                <Border.Background>
                    <media:AcrylicBrush TintOpacity="0.2"
                             AlwaysUseFallback="False"
                             xmlns:media="using:Windows.UI.Xaml.Media" />
                </Border.Background>

                <ScrollViewer>
                    <StackPanel Padding="10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="DISPATCH DRUG SHIPMENT"
                               FontStyle="Italic"
                               FontWeight="ExtraBold"
                               Padding="20,10"/>
                            <TextBox x:Name="tokenId" 
                                     PlaceholderText="Enter Token Id (numbers only0" 
                                     Margin="5,2" InputScope="Digits"
                                     />
                           <TextBox Text="{Binding AccountAddresses}"
                                      x:Name="_accountParam"
                                     PlaceholderText="Enter Account Address" Margin="5,2"/>
                            <TextBox Text="{Binding AccountTypes}"
                                      x:Name="_typeParam"
                                     PlaceholderText="Enter Account Type" Margin="5,2" InputScope="Digits"/>
                            <Button Content="DISPATCH"
                                    FontWeight="ExtraBold"
                                    x:Name="dispatchBtn"
                                    Click="DispatchButton_ClickAsync"
                                    Margin="5,2"/>
                        </StackPanel>
                        <Grid Padding="20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="TRANSACTION HASH"/>
                            <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="CONTRACT HASH"/>

                            <TextBox x:Name="txnHashTwo"
                               Grid.Row="0"
                               Grid.Column="1"
                               Text="Transaction Hash"/>
                            <TextBox x:Name="contractHashTwo"
                               Grid.Row="1"
                               Grid.Column="1"
                               Text="Contract Hash"/>
                        </Grid>

                        <Grid Padding="20,0" 
                      BorderBrush="AliceBlue"
                      BorderThickness="0.5">                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="EMITTED EVENTS"/>
                            <TextBlock Grid.Row="1"
                               Text="{Binding ShipmentMsgs}"
                               FontWeight="ExtraBold"/>
                            <TextBlock Grid.Row="2"
                               Text="{Binding TransferMsgs}"
                               FontWeight="ExtraBold"/>
                            <TextBlock Grid.Row="3"
                               Text="{Binding ApprovalMsgs}"
                               FontWeight="ExtraBold"/>
                            <TextBlock Grid.Row="4"
                               Text="{Binding ErrorMsgs}"
                               FontWeight="ExtraBold"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

            </Border>

            <Border Grid.Row="3"
                BorderThickness="1"
                BorderBrush="AntiqueWhite">
                <Border.Background>
                    <media:AcrylicBrush TintOpacity="0.2"
                             AlwaysUseFallback="False"
                             xmlns:media="using:Windows.UI.Xaml.Media" />
                </Border.Background>

                <StackPanel Orientation="Horizontal"
                            x:Name="trackOrder"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <StackPanel x:Name="trackTypes"/>
                    <StackPanel x:Name="trackAddresses"/>
                    <StackPanel x:Name="trackTokenIds"/>


                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
