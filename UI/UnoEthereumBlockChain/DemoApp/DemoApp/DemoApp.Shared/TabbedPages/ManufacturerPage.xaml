<Page
    x:Class="DemoApp.TabbedPages.ManufacturerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DemoApp.TabbedPages"
    xmlns:vm="using:DemoApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:ManufacturerVM/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="MANUFACTURER"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="32"/>
        <Grid Padding="20,0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="AntiqueWhite">
                <Border.Background>
                    <media:AcrylicBrush TintOpacity="0.2"
                             AlwaysUseFallback="False"
                             xmlns:media="using:Windows.UI.Xaml.Media" />
                </Border.Background>
                <ScrollViewer>
                    <StackPanel Padding="10,0">
                        <TextBlock Text="ACCOUNT DETAILS"
                           Padding="20,10"
                           FontStyle="Italic"
                           FontWeight="ExtraBold"/>
                        <Grid Padding="20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                           Grid.Row="0"
                           Text="ACCOUNT HASH :"/>
                            <TextBlock Grid.Column="0"
                           Grid.Row="1"
                           Text="ACCOUNT TYPE :"/>
                            <TextBlock Grid.Column="0"
                           Grid.Row="2"
                           Text="OWNED TOKENS :"/>
                            <TextBlock Grid.Column="0"
                           Grid.Row="3"
                           Text="CONTRACT HASHES :"/>

                            <TextBlock x:Name="accountHash"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding SetUp.Accounts.one.Address}"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="accountType"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Text="MANUFACTURER"
                                     TextWrapping="Wrap"/>
                            <TextBlock x:Name="ownedTokens" 
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Text="{Binding OwnedTokens, Mode=TwoWay}"
                                    TextWrapping="Wrap"/>
                            <TextBlock x:Name="contractHashes" 
                                       Grid.Row="3"
                                       Grid.Column="1"
                                       Text="{Binding ContractHashes, Mode=TwoWay}"
                                       TextWrapping="Wrap"/>

                        </Grid>
                    </StackPanel>
                </ScrollViewer>

            </Border>

            <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="AntiqueWhite">
                <Border.Background>
                    <media:AcrylicBrush TintOpacity="0.2"
                             AlwaysUseFallback="False"
                             xmlns:media="using:Windows.UI.Xaml.Media" />
                </Border.Background>
                <ScrollViewer>
                    <StackPanel Padding="10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="DEPLOY CONTRACT"
                               FontStyle="Italic"
                               FontWeight="ExtraBold"
                               Padding="20,10"/>

                            <TextBox x:Name="tokenSymbol" 
                                     PlaceholderText="Enter Token Symbol" 
                                     Margin="5,2"
                                     Text="{Binding Symbol, Mode=TwoWay}"/>
                            <TextBox x:Name="tokenName" 
                                     PlaceholderText="Enter Token Name" 
                                     Margin="5,2"
                                     Text="{Binding Name, Mode=TwoWay}"/>

                            <Button Content="DEPLOY"
                                    FontWeight="ExtraBlack"
                                    x:Name="deployBtn"
                                    Click="DeployButton_ClickAsync"         
                                    Margin="5,2"/>
                        </StackPanel>
                        <Grid Padding="20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="TRANSACTION HASH"/>
                            <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="CONTRACT HASH"/>

                            <TextBlock x:Name="txnHashOne"
                               Grid.Row="0"
                               Grid.Column="1"
                               Text="{Binding DepolyReceipt.TransactionHash, Mode=TwoWay}"/>
                            <TextBlock x:Name="contractHashOne"
                               Grid.Row="1"
                               Grid.Column="1"
                               Text="{Binding DepolyReceipt.ContractAddress, Mode=TwoWay}"/>
                        </Grid>

