<Page 
    x:Class="PaginationPeopleApp.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="using:System"
    xmlns:mvux="using:Uno.Extensions.Reactive.UI">

    <ListView ItemsSource="{Binding People}" CanBeScrollAnchor="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <TextBlock Text="{Binding FirstName}"/>
                    <TextBlock Text="{Binding LastName}"/>
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.Footer>
            <StackPanel Orientation="Horizontal">
                <Button Content="Previous" Command="{Binding MovePage}" CommandParameter="-1" />
                <Button Content="Next" Command="{Binding MovePage}" CommandParameter="1" />
            </StackPanel>
        </ListView.Footer>
    </ListView>
</Page>