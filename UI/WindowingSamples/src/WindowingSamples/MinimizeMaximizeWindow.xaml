<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WindowingSamples.MinimizeMaximizeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WindowingSamples.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <controls:WindowTitleControl Text="Minimize/maximize" Glyph="&#xEE49;" />

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Spacing="8">
      <Button Click="MaximizeClick" HorizontalAlignment="Stretch" Content="Maximize" />
      <Button Click="RestoreClick" HorizontalAlignment="Stretch" Content="Restore"/>
      <Button Click="MinimizeClick" HorizontalAlignment="Stretch" Content="Minimize"/>
    </StackPanel>
  </Grid>
</Window>
