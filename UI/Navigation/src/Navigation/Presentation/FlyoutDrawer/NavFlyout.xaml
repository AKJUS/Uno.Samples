<Flyout x:Class="Navigation.Presentation.NavFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:Navigation.Presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uen="using:Uno.Extensions.Navigation.UI"
        xmlns:utu="using:Uno.Toolkit.UI"
        mc:Ignorable="d"
        Placement="Full"
        FlyoutPresenterStyle="{StaticResource RightDrawerFlyoutPresenterStyle}">

    <StackPanel>
        <TextBlock Text="Flyout" />
        <Button Content="Button 1"
                uen:Navigation.Request="First" />
        <Button Content="Button 2"
                uen:Navigation.Request="Second" />
        <Button Content="Button 3"
                uen:Navigation.Request="Third" />
    </StackPanel>
</Flyout>
