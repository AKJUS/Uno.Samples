<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<!-- Load WinUI resources -->
		<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

	</ResourceDictionary.MergedDictionaries>
	<!-- Add resources here -->

     <!-- Main Colors -->
    <Color x:Key="NeuAppBaseColor1">#0e9bed</Color>
    <Color x:Key="NeuAppBaseColor2">#17181c</Color>
    <Color x:Key="NeuAppBaseColor3">#34393f</Color>
    <Color x:Key="NeuAppBaseColor4">#FF25262B</Color>
     <!--_____________-->

    <LinearGradientBrush x:Key="NeuAppDesktopBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="{StaticResource NeuAppBaseColor3}"/>
        <GradientStop Color="{StaticResource NeuAppBaseColor2}" Offset="0.96" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NeuAppWindowBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="{StaticResource NeuAppBaseColor2}"/>
        <GradientStop Color="{StaticResource NeuAppBaseColor3}" Offset="0.96"/>
    </LinearGradientBrush>
	
</ResourceDictionary>
