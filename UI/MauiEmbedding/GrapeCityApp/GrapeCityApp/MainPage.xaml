<Page x:Class="GrapeCityApp.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:GrapeCityApp"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<TextBlock AutomationProperties.AutomationId="HelloTextBlock"
					   Text="Hello Uno Platform"
					   HorizontalAlignment="Center" />
			<TextBlock Text="Instructions: Locate TODO items in code and uncomment the appropriate code in order to use the GrapeCity C1 controls (FlexGrid and Calendar)"
					   HorizontalAlignment="Center" />
			<embed:MauiHost x:Name="MauiHostElement"
							xmlns:embed="using:Uno.Extensions.Maui"
							xmlns:controls="using:GrapeCityApp.MauiControls"
							Source="controls:EmbeddedControl" />
		</StackPanel>
	</ScrollViewer>
</Page>
